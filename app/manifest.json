{
  "manifest_version": 3,
  "name": "Salesforce Quick Search",
  "version": "1.0",
  "description": "Quick search for Salesforce with keyboard shortcuts",
  "default_locale": "en",
  "permissions": ["activeTab", "storage", "commands"],
  "host_permissions": ["https://*.salesforce.com/*"],
  "action": {
    "default_icon": {
      "16": "images/ncino38.png",
      "48": "images/ncino38.png",
      "128": "images/ncino128.png"
    }
  },
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "mac": "Command+Shift+Space",
        "windows": "Ctrl+Shift+Space",
        "chromeos": "Ctrl+Shift+Space",
        "linux": "Ctrl+Shift+Space"
      },
      "description": "Toggle search overlay"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
